<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rxxp"
    android:padding="20dp">
    <TextView
        android:id="@+id/goods_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"/>

    <TextView
        android:id="@+id/goods_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/goods_dd" />

    <TextView
        android:id="@+id/goods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_dd"
        android:layout_marginTop="10dp"
        android:id="@+id/goods_list"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/goods_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_list"
        android:text="派件公司"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goods_company"
        android:id="@+id/courier_name"
        android:layout_below="@id/goods_list"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/goods_code2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_company"
        android:text="快递单号"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:layout_below="@id/goods_company"
        android:layout_toRightOf="@id/goods_code2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/goods_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_company"
        android:layout_alignParentRight="true"
        android:text="确认收货"
        android:background="#f11010"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
