<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收货地址"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/address_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:padding="16dp"/>
    <Button
        android:id="@+id/add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增收货地址"
        android:textColor="#ffffff"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:background="@drawable/bg_address_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/address_complete"
        android:layout_above="@id/add_address"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
