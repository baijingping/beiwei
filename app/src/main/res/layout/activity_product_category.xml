<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_choose"
        android:src="@mipmap/menu_n_hdpi"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/category_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/search_n_hdpi"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/category_choose"
        android:id="@+id/product_category_main"
        android:layout_marginTop="10dp"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>
